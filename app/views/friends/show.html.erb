
<div class="jumbotron">
  <h1 class="display-4">
   <%= @friend.first_name %>
   <%= @friend.last_name %>
  </h1>
  <p class="lead"> 
  <%= @friend.phone %> | 
  <%= @friend.email %>|
  <%= @friend.line_id %> 
  </p> <br/> <br/>
  <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-warning" %>
  <%= link_to 'Delete', @friend, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' } %>
  <%= link_to 'Back', friends_path, class:"btn btn-info" %>
  </div>

